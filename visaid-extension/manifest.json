
{
  "manifest_version": 3,
  "name": "VisAid AI",
  "version": "1.0",
  "permissions": ["scripting"],
  "host_permissions": ["http://localhost:8000/*", "<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}