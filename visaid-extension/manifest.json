{
  "manifest_version": 3,
  "name": "VisAid AI",
  "version": "1.0",
  "description": "Agentic Accessibility Copilot",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["http://localhost:8000/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
     {
    "matches": ["<all_urls>"],
    "js": ["content.js"],
    "all_frames": true
  }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}